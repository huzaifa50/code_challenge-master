{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "sourceMap": true,
        "isolatedModules": false,
        "types": ["express"],
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "node_modules/@types/puppeteer/index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}